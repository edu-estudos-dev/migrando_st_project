<!DOCTYPE html>
<html lang="pt-br">
    <style>
        /* Media Query para notebooks */
        @media (max-width: 1366px) {
                .header-spacer-cadastrar {
                    height: 50px !important;
                }
            }
    </style>
<%- include('../partials/head', { title: 'Cadastrar Estabelecimento' }) %>

<body class="bg-light">
    <%- include('../partials/header') %>

    <!-- Espaçador para compensar o header -->
    <div class="header-spacer header-spacer-cadastrar"></div>

    <div class="container w-75">
        <div class="cabecalho">
            <h1 class="mb-0">Cadastrar Estabelecimento</h1>
        </div>

        <main class="mb-5 main-estabelecimentos">
            <form id="cadastroForm" class="ps-3" action="/estabelecimentos/add" method="POST">
                <div class="row">
                    <div class="col-md-6">
                        <label class="mb-1 fw-bold fs-5" for="estabelecimento">Nome do Estabelecimento</label>
                        <input type="text" class="form-control mb-2" id="estabelecimento" name="estabelecimento" required placeholder="Digite o nome">
                    </div>
                    <div class="col-md-2">
                        <label class="mb-1 fw-bold fs-5" for="responsavel_nome">Responsável</label>
                        <input type="text" class="form-control mb-2" id="responsavel_nome" name="responsavel_nome" required placeholder="Nome do responsável">
                    </div>
                    <div class="col-md-2">
                        <label class="mb-1 fw-bold fs-5" for="telefone_contato">Contato</label>
                        <input type="tel" class="form-control mb-2" id="telefone_contato" name="telefone_contato" required placeholder="(00) 00000-0000" maxlength="15">
                    </div>
                    <div class="col-md-2">
                        <label class="mb-1 fw-bold fs-5" for="status">Status</label>
                        <select class="form-control mb-2" id="status" name="status" required>
                            <option value="ATIVO" selected>ativo</option>
                            <option value="INATIVO">inativo</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-5">
                        <label class="mb-1 fw-bold fs-5" for="endereco">Endereço</label>
                        <input type="text" class="form-control mb-2" id="endereco" name="endereco" required placeholder="Rua, número e complemento">
                    </div>
                    <div class="col-md-3">
                        <label class="mb-1 fw-bold fs-5" for="bairro">Bairro</label>
                        <input type="text" class="form-control mb-2" id="bairro" name="bairro" required placeholder="Nome do bairro">
                    </div>
                    <div class="col-md-2">
                        <label class="mb-1 fw-bold fs-5" for="chave">Chave</label>
                        <input type="text" class="form-control mb-2" id="chave" name="chave" placeholder="Código da chave">
                    </div>
                    <div class="col-md-2">
                        <label class="mb-1 fw-bold fs-5" for="maquina">Máquina</label>
                        <input type="text" class="form-control mb-2" id="maquina" name="maquina" placeholder="Número da máquina">
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2">
                        <label class="mb-1 fw-bold fs-5 ms-4">Produto</label>
                        <div class="form-check">
                            <input class="form-check-input ms-1" type="checkbox" id="produto1" name="produto" value="BOLINHAS">
                            <label class="form-check-label ms-2" for="produto1">BOLINHAS</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input ms-1" type="checkbox" id="produto2" name="produto" value="FIGURINHAS">
                            <label class="form-check-label ms-2" for="produto2">FIGURINHAS</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input ms-1" type="checkbox" id="produto3" name="produto" value="PELÚCIAS">
                            <label class="form-check-label ms-2" for="produto3">PELÚCIAS</label>
                        </div>
                    </div>
                    <div class="col-md-10">
                        <label class="mb-1 fw-bold fs-5" for="observacoes">Comentários</label>
                        <textarea class="form-control mb-2" id="observacoes" name="observacoes" rows="3" maxlength="255" placeholder="Digite observações relevantes"></textarea>
                        <div class="form-text text-end" id="charCounter">0/255 caracteres</div>
                    </div>
                </div>

                <div class="d-flex justify-content-center my-3">
                    <a href="/estabelecimentos/table"><button type="button" class="btn btn-warning px-5 me-3 fs-5">Cancelar</button></a>
                    <button type="submit" class="btn btn-success px-5 fs-5">Cadastrar</button>
                </div>
            </form>
        </main>

        <!-- Modal de Sucesso -->
        <% if (success) { %>
            <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header bg-success text-white">
                            <h5 class="modal-title" id="successModalLabel">Sucesso!</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <%= success %>
                        </div>
                        <div class="modal-footer">
                            <a href="/estabelecimentos/table" class="btn btn-success">OK</a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>

        <!-- Modal de Erro -->
        <% if (error) { %>
            <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header bg-danger text-white">
                            <h5 class="modal-title" id="errorModalLabel">Erro!</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <%= error %>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Fechar</button>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Formatação do telefone
            const telefoneInput = document.getElementById('telefone_contato');
            telefoneInput.addEventListener('input', (e) => {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length > 11) value = value.slice(0, 11);

                let formatted = '';
                if (value.length > 0) {
                    formatted = '(' + value.slice(0, 2);
                    if (value.length > 2) {
                        formatted += ') ' + value.slice(2, 7);
                    }
                    if (value.length > 7) {
                        formatted += '-' + value.slice(7);
                    }
                }
                e.target.value = formatted;
            });

            // Validação do formulário
            const form = document.getElementById('cadastroForm');
            form.addEventListener('submit', (e) => {
                const telefone = telefoneInput.value.replace(/\D/g, '');
                if (telefone.length !== 11) {
                    e.preventDefault();
                    alert('O telefone deve conter exatamente 11 dígitos (DDD + número).');
                    telefoneInput.classList.add('is-invalid');
                    return;
                } else {
                    telefoneInput.classList.remove('is-invalid');
                }

                const checkboxes = document.querySelectorAll('input[name="produto"]');
                const isChecked = Array.from(checkboxes).some(checkbox => checkbox.checked);
                if (!isChecked) {
                    e.preventDefault();
                    alert('Por favor, marque pelo menos um produto.');
                    return;
                }

                const requiredFields = document.querySelectorAll('[required]');
                let isValid = true;
                requiredFields.forEach(field => {
                    if (!field.value.trim()) {
                        isValid = false;
                        field.classList.add('is-invalid');
                    } else {
                        field.classList.remove('is-invalid');
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    alert('Preencha todos os campos obrigatórios!');
                    return;
                }
            });

            // Contador de caracteres do textarea
            const textarea = document.getElementById('observacoes');
            const charCounter = document.getElementById('charCounter');
            textarea.addEventListener('input', () => {
                const length = textarea.value.length;
                charCounter.textContent = `${length}/255 caracteres`;
            });

            // Controle dos modais
            const successModalElement = document.getElementById('successModal');
            const errorModalElement = document.getElementById('errorModal');

            if (successModalElement) {
                const successModal = new bootstrap.Modal(successModalElement, {});
                successModal.show(); // Abre o modal de sucesso
                setTimeout(() => {
                    successModal.hide(); // Fecha o modal após 3 segundos
                    window.location.href = '/estabelecimentos/table'; 
                }, 3000);
            }

            if (errorModalElement) {
                const errorModal = new bootstrap.Modal(errorModalElement, {});
                errorModal.show(); // Abre o modal de erro (permanece até fechar manualmente)
            }
        });
    </script>

    <%- include('../partials/footer') %>
</body>
</html>