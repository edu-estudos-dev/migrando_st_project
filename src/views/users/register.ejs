<style>
    /* Estilos Globais */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        color: #333;
        line-height: 1.6;
        margin: 0;
    }

    /* Input Customizado */
    .input-custom:focus {
        outline: 0;
        box-shadow: none !important;
        border-color: #2575fc;
    }

    /* Link Cadastre-se */
    .caixa-externa .text-secondary {
        color: #f8f9fa !important;
        transition: all 0.3s ease;
    }

    /* Texto Secundário com Hover */
    .caixa-externa .text-secondary:hover {
        color: #d1e3ff !important;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }

    /* Caixa Externa com Gradiente */
    .caixa-externa {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        border: none;
        padding: 2rem 2.5rem;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    /* Título */
    .caixa-externa h1 {
        color: #fff;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
    }

    /* Formulário */
    .form-label {
        color: #fff;
    }

    .input-group-text {
        background: rgba(255, 255, 255, 0.9);
        color: #333;
    }

    .form-control {
        border: 1px solid #fff;
        background: rgba(255, 255, 255, 0.95);
        color: #333;
    }

    /* Botão Entrar */
    .btn-custom {
        position: relative;
        display: inline-block;
        background: linear-gradient(135deg, #ff416c, #ff4b2b);
        color: #fff !important;
        border: 2px solid transparent;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        z-index: 1;
        transition: background 0.5s ease, border-color 0.5s ease, transform 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-custom::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        z-index: -1;
        transition: opacity 0.5s ease;
        opacity: 0;
        border-radius: 8px;
    }

    .btn-custom:hover::before {
        opacity: 1;
    }

    .btn-custom:hover {
        border-color: #fff;
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
    }

    /* Alerta */
    .alert-danger {
        background: rgba(220, 53, 69, 0.9);
        color: #fff;
        border: none;
    }
</style>


<%- include('../partials/head', { title: 'Registrar novo usuário' }) %>

<div class="container-fluid d-flex align-items-center justify-content-center min-vh-100">
    <div class="caixa-externa">
        <h1 class="text-center display-6 fw-bold mb-4 text-white">Registrar</h1>
        <hr class="border-light">

        <form action="/users/register" method="POST" id="registerForm">
            <div class="form-group mb-3">
                <label for="username" class="form-label">Usuário</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                    <input type="text" class="form-control input-custom" id="username" name="username"
                        placeholder="Entre com o usuário" required>
                </div>
            </div>
            <div class="form-group mb-3">
                <label for="password" class="form-label">Senha</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input type="password" class="form-control input-custom" id="password" name="password"
                        placeholder="Sua Senha" required>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-custom mt-4 w-100">Registrar</button>
            </div>
            <div class="text-center mt-3">
                <a href="/users/login" class="text-secondary text-decoration-none">
                    <i class="bi bi-arrow-left-circle"></i> Voltar para Login
                </a>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    const successMessage = "<%= success %>";
    const errorMessage = "<%= erro %>";

    if (successMessage) {
        Swal.fire({
            icon: 'success',
            title: 'Sucesso!',
            text: successMessage,
            confirmButtonColor: '#2575fc'
        }).then(() => {
            window.location.href = '/users/login'; // Redireciona para login
        });
    }

    if (errorMessage) {
        Swal.fire({
            icon: 'error',
            title: 'Erro!',
            text: errorMessage,
            confirmButtonColor: '#ff4b2b'
        });
    }
</script>

<script>
    // Posiciona o cursor no campo "Usuário" ao carregar a página
    window.onload = function () {
        document.getElementById('username').focus();
    };
</script>